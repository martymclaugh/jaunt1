<body style="background-color:powderblue;">

<img src="http://www.pd4pic.com/images/penguin-bird-cool-rapper-gangster-sun-glasses.png" alt="Gangsta Hepi C" style="width:20%;height:15%;">

<h1 style="color:yellow;">Welcome to Lil' Twits, <%= @user.full_name %>!</h1>

<div class="follow_info">
    <a href="/users/<%= @user.id %>/follower">
      Following: <%= Follow.where(follower_id: @user.id).length %>
    </a>
    
    <a href="/users/<%= @user.id %>/following">
      Followers: <%= Follow.where(following_id: @user.id).length %>
    </a>
</div>

<div>
  <% if @user.following.include?(@online_user) %>
    <form action ="/users/<%= @user.id %>/unfollow" method="post">
        <input type="submit" value="Unfollow"></input>
    </form>
  <% else %>
    <form action ="/users/<%= @user.id %>/follow" method="post">
      <input type="submit" value="Follow"></input>
    </form>
  <% end %>
  <p style="color: red">
    <% if @follow_error %>
      <%= @follow_error %>
    <% end %>
    </p>
</div>

<div class="write_twit">
  <h2 style="color:orange">Whatsup lil' twit?</h2>
  <form action ="/posts/new" method="post">
      <input type="text" name="twit" placeholder="Write your post here">
      <input type="submit" value="twit"></input>
  </form>
</div>


<div class="feed">
  <h2 style="color:orange"><%= @user.full_name %>'s Bird FEED </h2>
   <% @user.posts.each do |post| %>
      <li> 
        <%= post.text %>
<!--         <form method="post">
          <button type="submit" formmethod="post" formaction="/posts/:post_id/upvotes/new">&#8657;</button>
        </form> -->
        <form method="post">
          <button type="submit" formmethod="post" formaction="/posts/<%=post.id%>/upvotes/new">&#x25B2;</button>
        </form>
        
        <% if post.votes > 0 %>
          <div style="font-size: 16; color: green; font-weight: 900; ">
            <%= post.votes %>
          </div>
        <% elsif post.votes < 0 %>
          <div style="font-size: 16; color: red; font-weight: 900; ">
            <%= post.votes %>
          </div>
        <% else %>
          <div style="font-size: 16; color: gray; font-weight: 900; ">
            <%= post.votes %>
          </div>
        <% end %>
        </div>
        <form method="post">
          <button type="submit" formmethod="post" formaction="/posts/<%=post.id%>/downvotes/new">&#x25BC;</button>
        </form>
      </li>
  <% end %>
</div>
